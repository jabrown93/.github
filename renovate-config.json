{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],

  "timezone": "America/Los_Angeles",
  "schedule": ["* 0-6 * * *"],

  "dependencyDashboard": true,
  "rebaseWhen": "behind-base-branch",
  "rangeStrategy": "replace",
  "prCreation": "immediate",
  "automerge": true,
  "commitBodyTable": true,
  "prHourlyLimit": 10,
  "configMigration": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": false,
  "ignoreTests": false,

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash",
    "schedule": ["* 0-6 * * 1"]
  },

  "npm": {
    "postUpdateOptions": ["npmDedupe"]
  },

  "packageRules": [
    {
      "description": "Group ALL major updates into a single PR",
      "matchUpdateTypes": ["major"],
      "groupName": "All major updates",
      "groupSlug": "all-majors",
      "automerge": false,
      "labels": ["renovate-major", "needs-review"]
    },
    {
      "description": "Group ALL minor/patch updates into a single PR",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "All non-major updates",
      "groupSlug": "all-non-majors",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchDatasources": ["docker"],
      "matchCurrentVersion": "^\\d+\\.\\d+(?:\\.\\d+)?-\\d{8}$",
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)(?:\\.(?<patch>\\d+))?-(?<year>\\d{4})(?<month>\\d{2})(?<day>\\d{2})$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/^lscr\\.io\\/linuxserver\\//"],
      "versioning": "regex:^v?(?<compatibility>[A-Za-z0-9]+)-[Ll][Ss](?<major>\\d+)$"
    }
  ]
}
